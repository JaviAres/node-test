<%- include("template/cabecera", {tituloWeb: 'Nuevo Pokemon' }) %>
    <div class="container">
        <h1 style="text-align: center;">Añadir nuevo Pokemon</h1>
        <form action="/pokemon" class="my-2" method="POST">
            <input type="text" placeholder="Nombre Pokemon" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Tipo Pokemon" class="form-control my-2" name="tipo">
            <input type="text" placeholder="Descripción Pokemon" class="form-control my-2" name="descripcion">
           
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button> 
            <a class="btn btn-danger btn-block my-4" href="/pokemon">Cancelar</a>
        </form>
    </div>
