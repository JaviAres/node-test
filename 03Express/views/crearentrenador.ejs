<%- include("template/cabecera", {tituloWeb: 'Nuevo Entrenador' }) %>
    <div class="container">
        <h1 style="text-align: center;">Añadir nuevo Entrenador</h1>
        <form action="/entrenador" class="my-2" method="POST">
            <input type="text" placeholder="Nombre Entrenador" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Tipo Predilecto" class="form-control my-2" name="tipo">
            <input type="text" placeholder="Descripción" class="form-control my-2" name="descripcion">
            <input type="text" placeholder="Ciudad Origen" class="form-control my-2" name="ciudad">
           
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button> 
            <a class="btn btn-danger btn-block my-4" href="/entrenador">Cancelar</a>
        </form>
    </div>
<%- include("template/footer") %>
